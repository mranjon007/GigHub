@model GigHub.Models.GigFormViewModel
@{
    ViewBag.Title = "Create";
}

<h2>Add a Gig</h2>

<form>
    <div class="form-group">
        @Html.LabelFor(m=>m.Vanue)
        @Html.TextBoxFor(m=>m.Vanue, new {@class="form-control"})
    </div>
    
    <div class="form-group">
        @Html.LabelFor(m=>m.Date)
        @Html.TextBoxFor(m=>m.Time, new{@class="form-control"})
    </div>
    
    <div class="form-group">
        @Html.LabelFor(m=>m.Time)
        @Html.TextBoxFor(m=>m.Time, new{@class="form-control"})
    </div>
    
    <div class="form-group">
        @Html.LabelFor(m=>m.Genre)
        @Html.DropDownListFor(m=>m.Genre, new SelectList(Model.Genres, "Id", "Name"), "", new {@class="form-control"})
    </div>
    
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>

</form>

