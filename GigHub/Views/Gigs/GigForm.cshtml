@model GigHub.ViewModels.GigFormViewModel
@{
    ViewBag.Title = @Model.Heading;
}

<h2>@Model.Heading</h2>

@using (Html.BeginForm(Model.Action, "Gigs"))
{

    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)

    <p class="alert alert-info">All fields are <strong >required</strong>.</p>
    <div class="form-group">
        @Html.LabelFor(m => m.Vanue)
        @Html.TextBoxFor(m => m.Vanue, new { @class = "form-control", autofocus="autofocus" })
        @Html.ValidationMessageFor(m=>m.Vanue)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Date)
        @Html.TextBoxFor(m => m.Date, new { @class = "form-control" , placeholder="eg 1 Nov 2016"})
        @Html.ValidationMessageFor(m=>m.Date)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Time)
        @Html.TextBoxFor(m => m.Time, new { @class = "form-control", placeholder="eg 20:00" })
        @Html.ValidationMessageFor(m=>m.Time)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Genre)
        @Html.DropDownListFor(m => m.Genre, new SelectList(Model.Genres, "Id", "Name"), "", new { @class = "form-control" })
        @Html.ValidationMessageFor(m=>m.Genre)
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary btn-lg">Save</button>
    </div>

}

@section scripts
{    
    @Scripts.Render("~/bundles/jqueryval")
}


